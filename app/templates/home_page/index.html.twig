{% extends 'base.html.twig' %}

{% block title %}{{'title_home_page'|trans}}{% endblock %}

{% block body %}

    {% if currentEvents is defined and currentEvents|length %}
        <h1>{{ 'title_current_event'|trans }}</h1>
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th>{{ 'label_id'|trans }}</th>
                <th>{{ 'label_title'|trans }}</th>
                <th>{{ 'label_date'|trans }}</th>
                <th>{{'label_actions'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in currentEvents %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.date|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

{#        <div class="navigation text-center">#}
{#            {{ knp_pagination_render(pagination) }}#}
{#        </div>#}
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}


    {% if comingEvents is defined and comingEvents|length %}
        <h1>{{ 'title_coming_event'|trans }}</h1>
        <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th>{{ 'label_id'|trans }}</th>
            <th>{{  'label_title'|trans }}</th>
            <th>{{ 'label_date'|trans }}</th>
            <th>{{'label_actions'|trans}}</th>
        </tr>
        </thead>
        <tbody>
        {% for event in comingEvents %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.date|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action_view'|trans }}">
                        {{ 'action_view'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}

