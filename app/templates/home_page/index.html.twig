{% extends 'base.html.twig' %}

{% block title %}{{'title_event_list'|trans}}{% endblock %}

{% block body %}
    {% if currentEvents is defined and currentEvents|length %}
        <h1>{{ 'title_event_list'|trans }}</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label_id'|trans }}</th>
                <th>{{  'label_title'|trans }}</th>
                <th>{{'label_actions'|trans}}</th>
            </tr>
            </thead>
            <tbody>
{#            {{ dump(currentEvents) }}#}
            {% for event in currentEvents %}
                <tr>
{#                    {{ dump(event) }}#}
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>
                        <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{#        <div class="navigation text-center">#}
{#            {{ knp_pagination_render(pagination) }}#}
{#        </div>#}
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}

