{% extends 'base.html.twig' %}

{% block title %}{{'title_home_page'|trans}}{% endblock %}

{% block body %}

    {% if paginationCurrent is defined and paginationCurrent.items|length %}
        <h1>{{ 'title_current_event'|trans }}</h1>
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(paginationCurrent, 'label_id'|trans, 'event.id') }}</th>
                <th>{{ knp_pagination_sortable(paginationCurrent, 'label_title'|trans, 'event.title') }}</th>
                <th>{{ knp_pagination_sortable(paginationCurrent, 'label_date'|trans, 'event.date') }}</th>
                <th>{{'label_actions'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in paginationCurrent %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.date|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center d-flex justify-content-center">
            {{ knp_pagination_render(paginationCurrent) }}
        </div>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}


    {% if paginationComing is defined and paginationComing.items|length %}
        <h1>{{ 'title_coming_event'|trans }}</h1>
        <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(paginationComing, 'label_id'|trans, 'event.id') }}</th>
            <th>{{ knp_pagination_sortable(paginationComing, 'label_title'|trans, 'event.title') }}</th>
            <th>{{ knp_pagination_sortable(paginationComing, 'label_date'|trans, 'event.date') }}</th>
            <th>{{'label_actions'|trans}}</th>
        </tr>
        </thead>
        <tbody>
        {% for event in paginationComing %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.date|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action_view'|trans }}">
                        {{ 'action_view'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center d-flex justify-content-center">
        {{ knp_pagination_render(paginationComing) }}
    </div>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}

