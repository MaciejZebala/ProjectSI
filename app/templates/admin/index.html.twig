{% extends 'base.html.twig' %}

{% block title %}{{'title_category_list'|trans}}{% endblock %}

{% block body %}
    {% if pagination is defined and pagination.items|length %}
        <h1 class="category-header">{{ 'title_category_list'|trans }}</h1>
        <table class="table table-hover table-dark">
            <thead class="thead-light">
            <tr>
                <th>{{knp_pagination_sortable(pagination, 'label_id'|trans, 'user.id')}}</th>
                <th>{{knp_pagination_sortable(pagination, 'label_title'|trans, 'user.email')}}</th>
                <th>{{'label_actions'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ url('admin_user_edit', {id: user.id}) }}" title="{{ 'action_view'|trans }}">
                            <span><i class="far fa-edit"></i></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center d-flex justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}

